# CLISApp Backend Environment Configuration

# Application Settings
APP_NAME=CLISApp Backend
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Server Configuration
HOST=0.0.0.0
PORT=8080

# CORS Settings (for frontend)
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Database Configuration (for future use)
DATABASE_URL=postgresql://clisapp:password@localhost:5432/clisapp

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Data Sources
# Copernicus CDS API
COPERNICUS_CDS_API_KEY=your_cds_api_key_here
COPERNICUS_CDS_URL=https://cds.climate.copernicus.eu/api/v2

# NASA Earthdata (for MODIS LANCE data)
# Register at: https://urs.earthdata.nasa.gov/users/new
NASA_USERNAME=your_nasa_username
NASA_PASSWORD=your_nasa_password

# MODIS LANCE Configuration
MODIS_LANCE_BASE_URL=https://lance.modaps.eosdis.nasa.gov
MODIS_COMPOSITE_HOURS=24  # Hours of data for temporal compositing (to fill cloud gaps)
MODIS_UPDATE_INTERVAL=180  # Update every 3 hours (180 minutes)

# File Paths
DATA_ROOT=/app/data
DOWNLOADS_PATH=/app/data/downloads
TILES_PATH=/app/data/tiles
PROCESSING_PATH=/app/data/processing

# Tile Generation Settings
TILE_SIZE=256
MIN_ZOOM=6
MAX_ZOOM=12
TILE_FORMAT=png

# Cache Settings
TILE_CACHE_TTL=3600  # 1 hour
MAX_CACHE_SIZE=1000  # MB